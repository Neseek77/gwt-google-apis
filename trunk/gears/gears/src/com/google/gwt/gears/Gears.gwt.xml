<module>
  <!-- This linker adds the contents of gears_init.js into each permutation. -->
  <define-linker name="gears" class="com.google.gwt.gears.linker.GearsLinker"/>
  <add-linker name="gears" />  

  <!-- Define a property which answers true if Gears is installed -->
  <define-property name="gears.installed" values="false,true"/>
  <!-- Property provider which answers true if Gears is installed -->
  <property-provider name="gears.installed"><![CDATA[
    // Firefox
    if (typeof GearsFactory != 'undefined') {
      return "true";
    }

    try {
      // IE
      new ActiveXObject('Gears.Factory');
      return "true";
    } catch (e) {
      // Safari
      if ((typeof navigator.mimeTypes != 'undefined')
           && navigator.mimeTypes["application/x-googlegears"]) {
        return "true";
      }
    }

  return "false";
  ]]></property-provider>
</module>
