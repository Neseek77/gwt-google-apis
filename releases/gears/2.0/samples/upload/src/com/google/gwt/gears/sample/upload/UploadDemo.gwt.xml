<!-- Gears Upload sample                                                    -->
<!--                                                                        -->
<module>
      <inherits name='com.google.gwt.user.User'/>
      <inherits name="com.google.gwt.gears.Gears" />
	
      <!-- Inherit the default GWT style sheet -->
      <inherits name='com.google.gwt.user.theme.standard.Standard'/>

      <!-- Specify the app entry point class -->
      <entry-point class="com.google.gwt.gears.sample.upload.client.UploadDemo"/>
    
      <!-- Specify the application specific style sheet.              -->
      <stylesheet src='UploadDemo.css' />

      <!-- Rebind the entry point if Gears is not installed -->
      <replace-with class="com.google.gwt.gears.sample.upload.client.UploadDemoNoGears">
          <when-type-is class="com.google.gwt.gears.sample.upload.client.UploadDemo"/>
          <when-property-is name="gears.installed" value="false"/>
      </replace-with>

      <servlet path="/upload" class="com.google.gwt.gears.sample.upload.server.UploadServlet"/>
</module>
